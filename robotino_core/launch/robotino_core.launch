<launch>

  <!-- Arguments -->
  <arg name="robot_ip" default="127.0.1.1" />
  <arg name="robot_port" default="1000" />

  <!-- Core node -->
  <node pkg="robotino_core" type="robotino_core_node" name="robotino_core_node">
    <param name="robot_ip" value="$(arg robot_ip)" />
    <param name="robot_port" value="$(arg robot_port)" />
  </node>
  
</launch>
